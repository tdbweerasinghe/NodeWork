<%- include layouts/header.ejs %>

        <div class="page-data">
            
            <form method="post" action="/employees/add">
                <table cellpadding="11">
		<tr>
                    <td class="label">Emp ID</td><td>: <input type="int" name="empid" required></td>
                 </tr>
                <tr>
                    <td class="label">Name</td><td>: <input type="text" name="name" required></td>
                 </tr>
		<tr>
                    <td class="label">NIC</td><td>: <input type="text" name="nic" required></td>
                 </tr>
		<tr>
                    <td class="label">Desgnation</td><td>: <input type="text" name="designation" required></td>
                </tr>
                <tr>
                    <td class="label" valign="top">Home Address</td><td valign="top">: <textarea name="homeaddress" required cols="30" rows="5"></textarea></td>
                </tr>
                <tr>
                    <td class="label">Email</td><td>: <input type="text" name="email" required></td>
                </tr>
                <tr>
                    <td class="label">Remaining Leaves</td><td>: <input type="text" name="leaves"></td>
                 </tr>
		 <tr>
                    <td class="label">Expertise</td><td>: <input type="text" name="expertise"></td>
                 </tr>
                 <tr>
                    <td class="label">Phone</td><td>: <input type="text" name="phone" required></td>
                 </tr>
		 <tr>
                    <td class="label">Salary</td><td>: <input type="text" name="salary" required></td>
                 </tr>
		 <tr>
                    <td class="label">Resigned Date</td><td>: <input type="date" name="resigneddate"></td>
                 </tr>
                 <tr>
                    <td class="label">Joined Date</td><td>: <input type="date" name="joineddate" required></td>
                 </tr>
                 <tr>
                    <td class="label">Last Increment Date</td><td>: <input type="date" name="lastincrementdate" required></td>
                 </tr>
		 <tr>
                    <td class="label">Date of Birth</td><td>: <input type="date" name="dateofbirth" required></td>
                 </tr>
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="listEmployees()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
