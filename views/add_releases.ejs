        <div class="page-data">
            
            <form method="post" action="/releases/add">
                <table cellpadding="11">
		<tr>
                    <td class="label">Release ID</td><td>: <input type="text" name="relid" required></td>
                 </tr>                
		<tr>
                    <td class="label">Release Info</td><td>: <input type="text" name="releaseinfo" cols="30" rows="5"></td>
		</tr>	      
		<tr>
                    <td class="label">Release Date</td><td>: <input type="date" name="releasedate" required></td>
                 </tr>      
                 <tr>
                    <td class="label">Related Project ID</td><td>: <select name="projid" required>
							         	<option value="ABC Proj-1">ABC Proj-1</option>
  									<option value="ABC Proj-2">ABC Proj-2</option>
  									<option value="ABC Proj-3">ABC Proj-3</option>
								   </select>
		  </td>           
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="cancelAddingProject()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
