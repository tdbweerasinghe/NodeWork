<%- include layouts/header.ejs %>
	<script>
		function selectProjectAndStatus() {  			
    			document.getElementById("projects").value = "<%=data[0].projid%>";
			document.getElementById("status").value = "<%=data[0].currentstatus%>";
		}
	</script>

	<body onload="selectProjectAndStatus()">
        <div class="page-data">
            
            <form method="post" action="/projects/edit/<%=data[0].projid%>">
                <table cellpadding="11">       
                
		<td class="label">Project ID</td><td>: <select id="projects" name="projid" required>
							        	<option value="ABC Proj-1">ABC Proj-1</option>
  									<option value="ABC Proj-2">ABC Proj-2</option>
  									<option value="ABC Proj-3">ABC Proj-3</option>
							</select>
                
                <tr>
                    <td class="label">Project Name</td><td>: <input type="text" name="projname" value="<%=data[0].projname%>" required></td>
                </tr>  
		<tr>
                    <td class="label">Project Info</td><td>: <input type="text" name="projinfo" cols="30" rows="3" value="<%=data[0].projinfo%>" required></td>
                 </tr>	
                 <tr>
                    <td class="label">Started Date</td><td>: <input type="date" name="starteddate" value="<%=data[0].starteddate%>" required></td>
                </tr>
                    <td class="label">Current State</td><td>: <select id="status" name="currentstatus" required>
  								<option value="In-Progress">In-Progress</option>
  								<option value="On-Hold">On-Hold</option>
  								<option value="Delivered-Closed">Delivered-Closed</option> 								  </select>
		  </td>
		</tr> 
                 <tr>
                    <td class="label"></td>
                    <td>
                        &nbsp; <input type="submit" name="submit" value="Save">
                       <input type="button" name="cancel" value="Cancel" class="cancel" onClick="listProjects()">
                    </td>
                 </tr>
                </table>
            </form>
            
        </div>
        
<%- include layouts/footer.ejs %>
